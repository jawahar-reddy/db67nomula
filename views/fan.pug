extends layout

block content
  div(class="row m-2")
  h1(class="col-sm-10")= title
  a(href = "jet/create" class="btn bg-info text-white col-sm-2") Create
  |  

  - const jet = ['fan_type','color','cost']
  //- let items = [] 
  - let items = results; 
  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 

  div(class='container-fluid')
    div(class="d-flex justify-content-end")

    div(class="p-3 mb-2 bg-info text-white row")
      each item in jet 
        div(class="col-sm-2") #{item} :

    
    each o, index in items
      div(class="card text-info bg-warning mb-3" class='col' class='card' class='card-body' class='card-text' onclick='buy('+index+')') #{o}
        
          div(class='col-sm-2') #{o.fan_type}
          div(class='col-sm-2') #{o.color}
          div(class='col-sm-2') $ #{o.cost}
          div(class='col-sm-6')
            //- div(class='col-sm-3' onclick='buy('+index+')') #{o} 
            a(href = "jet/detail/?id=" + o._id)    detail --
            a(href = "jet/update/?id=" + o._id)    update --
            a(href = "jet/delete/?id=" + o._id)    delete      